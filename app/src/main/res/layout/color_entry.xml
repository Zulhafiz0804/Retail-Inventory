<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="4dp"
    android:padding="12dp"
    android:background="@drawable/color_entry_background">

    <EditText
        android:id="@+id/editColorName"
        android:hint="Color Name"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp">

        <EditText
            android:id="@+id/editImageUrl"
            android:layout_width="361dp"
            android:layout_height="104dp"
            android:layout_weight="1"
            android:hint="Image URL (e.g., Direct Link from Postimg)" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPasteImageUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_login_gradient"
            android:text="Paste" />
    </LinearLayout>

    <TextView
        android:text="Size Quantities:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:weightSum="5"
        android:gravity="center">

        <EditText
            android:id="@+id/editSizeS"
            android:hint="S"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editSizeM"
            android:hint="M"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editSizeL"
            android:hint="L"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editSizeXL"
            android:hint="XL"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editSizeXXL"
            android:hint="XXL"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
